APP_NAME="Arbiter Coffee Shop"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://api.arbitercoffee.com

LOG_CHANNEL=stack
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=arbiter_coffee
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@arbitercoffee.com"
MAIL_FROM_NAME="${APP_NAME}"

JWT_SECRET=your_jwt_secret_key_here
JWT_TTL=60

CORS_ALLOWED_ORIGINS=https://arbitercoffee.com,https://www.arbitercoffee.com

# ML Service Configuration
ML_SERVICE_URL=https://ml-service.arbitercoffee.com
ML_SERVICE_API_KEY=your_ml_service_api_key

# Payment Gateway Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

GCASH_MERCHANT_ID=your_gcash_merchant_id
GCASH_SECRET_KEY=your_gcash_secret_key

# Redis Configuration (if available)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration (if using Redis)
QUEUE_CONNECTION=database

# Cache Configuration (upgrade to Redis when available)
CACHE_STORE=file
